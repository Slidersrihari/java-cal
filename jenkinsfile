pipeline {
    agent any
    // optionss {
    //     buildDiscarder(LogRotator(numToKeepstr: '6'))
    // }
    // environment {
    //     DOCKERHUB_CREDENTIALS = credentials('muralialakuntla3-dockerhub')
    // }
    stages{
        stage('Docker Build') {	
        steps {
            sh 'docker build -t muralialakuntla3/javaapp .'
        }
        }
        stage('Docker run container') {	
        steps {
            sh 'docker container run -dt --name javacal -p 8090:8080 muralialakuntla3/javaapp'
        }
        }
        stage('Docker login') {	
        steps {
            sh "docker login -u ${env.dockerHubUser} -p ${env.dockerHubPassword}"
        }
        }
        stage('Docker Push') {	
        steps {
           withDockerRegistry(credentialsId: 'docker-hub-login', url: 'https://hub.docker.com/repositories/muralialakuntla3') {     
            sh 'docker push muralialakuntla3/javaapp'
            }
        }
        }
    }
}